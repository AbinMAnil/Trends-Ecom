<link rel="stylesheet" href="/stylesheets/admin/signup.css">
<%-include('./partials/!docType')%>
<body>

     <div class="registration-form">
         <form>
             <div class="form-icon" >
                 <span ><i style="margin-top: 24%;"  class="fas fa-user-shield"></i></i></span>
             </div>
             <div class="form-group">
                 <input type="text" class="form-control item" id="username" placeholder="Username">
             </div>
             <div class="form-group">
                 <input type="password" class="form-control item" id="password" placeholder="Password">
             </div>
            
             <div class="form-group">
                 <button  type="button" class="btn btn-block create-account" onclick="submitData()">Continue As King</button>
             </div>
             <center><p id="err" class="mt-3" style="color: red;font-size: 17px;"></p></center>
         </form>
         <div class="social-media">
             <h5 class="">Keri Vada_makkale.... </h5>
             <div class="social-icons" >
                 <a href="#">
                    <i  class="fas fa-user-cog mt-2"></i>
                 </i></a>
                 <a href="#"><i class="fas fa-layer-group mt-2"></i></i></a>
                 <a href="#"><i class="fal fa-balance-scale mt-2"></i></a>
             </div>
         </div>
     </div>
 </body>
 <script>
     var checker = false;
     var err = document.getElementById("err");
     function submitData(){
       var input =   document.getElementsByClassName("item")
         for(var i =0 ;i<input.length ;i++){
             if(input[i].value == ""){
             err.innerHTML = "Please Check the Fields";
             checker = false

             break;
             return;
             }else{
                 checker = true;
             }
         }
         var data = {
            userName : input[0].value,
            password : input[1].value
         }

         if(checker){
         $.ajax({
                    url:"/admin/formSumbit",
                    data:data,
                    method:"post",
                    success :(result)=>{
                        if(result.status == true ){
                        location.href ="/admin"
                        }else{
                            err.innerHTML = result.status
                        }

                    }
                })
            }else{
                err.innerHTML = "please check the Fields "
            }

     }
 </script>